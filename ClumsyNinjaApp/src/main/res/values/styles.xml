<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="numerello">
        <item name="android:paddingRight">36dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:textSize">28sp</item>
        <item name="android:background">@drawable/pinpad_button</item>
    </style>

    <style name="pincoso">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColorHint">#8fff</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:inputType">numberPassword</item>
        <item name="android:gravity">right</item>
        <item name="android:background">@android:color/holo_orange_light</item>
        <item name="android:drawableRight">@drawable/ic_delete</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">start</item>
        <item name="android:padding">16dp</item>
    </style>

</resources>
