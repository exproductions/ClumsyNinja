<resources>

    <!-- put the desired backgrounds here -->
    <drawable name="statusbar_background">#ff8800</drawable>
    <drawable name="window_background">#ffeeeeee</drawable>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:windowBackground">@drawable/window_background</item>
    </style>

    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_lostylenonacqua</item>
        <item name="android:titleTextStyle">@style/ActionBarStyle.Title</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="android:actionBarItemBackground">@drawable/selectable_background_lostylenonacqua</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_lostylenonacqua</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode</item>
    </style>

    <style name="ActionBarStyle.Title" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/actionbar_text_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="ActionButton.CloseMode" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_lostylenonacqua</item>
    </style>

    <style name="AppTheme.ExtendedActionBar">
        <!-- nothing to see here -->
    </style>

    <style name="numerello">
        <item name="android:paddingRight">36dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:textSize">28sp</item>
        <item name="android:background">@drawable/pinpad_button</item>
    </style>

    <style name="pincoso">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColorHint">#8fff</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:inputType">numberPassword</item>
        <item name="android:gravity">right</item>
        <item name="android:background">@android:color/holo_orange_light</item>
        <item name="android:drawableRight">@drawable/ic_delete</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">start</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="badasstext">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">36sp</item>
        <item name="android:layout_margin">24dp</item>
    </style>

    <style name="SenhorCardoText">
        <item name="android:textSize">21sp</item>
        <item name="customFont">senhor_fonto.ttf</item>
    </style>

    <style name="SenhorCardoText.Titolo">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

</resources>
